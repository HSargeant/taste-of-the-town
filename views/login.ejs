<main>
  <% if (locals.messages.errors) { %>
    <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %>    
  <% } %>
  <% if (locals.messages.info) { %>
    <% messages.info.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
    <% }) %>    
  <% } %>


  <div class="container">
    <h3 class="center">Welcome Back!</h3>
    <div class="login-window center container">
      <div class="container login-container center">
        <div class="row">
          <div class="col s12">
            <h2 class="c">Log In</h2>
          </div>
        </div>
        <div class="row">
          <form class=""action="/login" method="POST">
            <div class="row no-margin">
              <div class="col s12 input-field no-margin-bottom">
                <input tabindex="1" class="validate" type="email" name='email' id="email-input">
                <!-- <i class="material-icons left">email</i> -->
                <label for="email-input">Email</label>
              </div>
            </div>
            <div class="row no-margin">
              <div class="col s12 input-field no-margin-bottom">
                <input tabindex="2"  minlength="8"  class="validate" type="password" name='password' id="password-input">
                <label for="password-input">Password</label>
              </div>
            </div>
            <div class="row no-margin">
              <div class="col s12 input-field">
                <button class="btn-large darken-4 waves-effect waves-dark center-align authBtn" type="submit" name="action">Log In
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>