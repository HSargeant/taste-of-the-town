<header>
    <nav>
        <div class="nav-wrapper orange lighten-1">
        <a href="#" class="brand-logo center ">Type Of The Town</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="/">Home</a></li>
            <%if(user){%>
                <li><a href="/reviews">Your Reviews</a></li>
                <li><a  data-target="modal1" class="modal-trigger">Add a Review</a></li>
               <li> <a href="/logout">Logout</a></li>
            <%}else{ %>
                <li><a href="/login">Login</a></li>
                <li><a href="/signup">Signup</a></li>
            <%}%>
        </ul>
        </div>
    </nav>
  </header>

  <div id="modal1" class="modal">
    <div class="modal-content black-text">
        <h3>Add A Review</h3>
        <form class= "formReview black-text" action="/reviews/createCheckin" method='POST' id="submitForm">
            <label for="name" class="black-text">Restaurant Name:</label>
            <input type="text" placeholder="" name='name'>
            <label for="country" class="black-text">Country:</label>
            <select>
            <option value="Afghanistan">Afghanistan</option>
            <option value="Åland Islands">Åland Islands</option>
            <option value="Albania">Albania</option>
            <option value="Algeria">Algeria</option>
            <option value="American Samoa">American Samoa</option>
            <option value="Andorra">Andorra</option>
            <option value="Angola">Angola</option>
            <option value="Anguilla">Anguilla</option>
            <option value="Antarctica">Antarctica</option>
            <option value="Antigua and Barbuda">Antigua and Barbuda</option>
            <option value="Argentina">Argentina</option>
            <option value="Armenia">Armenia</option>
            <option value="Aruba">Aruba</option>
            </select>
            <input type="text" placeholder="Enter country" name='country'>
            <label for="state"class="black-text">State/Province/Region:</label>
            <input type="text" placeholder="State/Province/Region" name='state'>
            <label for="city"class="black-text">City:</label>
            <input type="text" placeholder="City" name='city'>
            <label for="foodType"class="black-text">Type of Food:</label>
            <input type="text" placeholder="" name='foodType'>
            <label for="favDish"class="black-text">Favorite Dish:</label>
            <input type="text" name='favDish'>
            <label for="comment"class="black-text">Comment:</label>
            <input type="text" placeholder="Write a comment" name='comment'>
            <select id="status" name="status">
                <option value="public" selected>Public</option>
                <option value="private">Private</option>
            </select>
            <input type="submit">
        </form>
    </div>
</div>