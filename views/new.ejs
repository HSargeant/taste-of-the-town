<main class="container">
    <div class="container-1280 center">
        <h3>Add a Review</h3>
    <form class="modalForm" action="/reviews/createCheckin" method='POST' id="">
        <div class="row">
            <div class="col s12 input-field">
                <input tabindex="1" class="validate" type="text" value="" name='restaurant' id="restaurant-modal" required>
                <label for="restaurant-modal">Restaurant Name</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m12 l4 input-field">
                <input name="country" tabindex="2" type="text" class="autocomplete validate" id="autocomplete-input" value='' required>
                <label for="autocomplete-input">Country</label>
            </div>
            <div class="col s12 m6 l4 input-field">
                <input tabindex="3" class="validate" type="text" name='state' id="state-modal" value="" required>
                <label for="state-modal">State/Province/Region</label>
            </div>
            <div class="col s12 m6 l4 input-field">
                <input tabindex="4" class="validate" type="text" name='city' id="city-modal" value="" required>
                <label for="city-modal">City</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m6 l6 input-field">
                <input tabindex="5" class="validate" type="text" name='foodType' id="foodType-modal" value="" required>
                <label for="foodType-modal">Type of Food</label>
            </div>
            <div class="col s12 m6 l6 input-field">
                <input tabindex="6" class="validate" type="text" name='favDish' id="favDish-modal" value="" required>
                <label for="favDish-modal">Favorite Dish</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 input-field">
                <input tabindex="7" class="validate" type="text" name='comment' id="comment-modal" value="" required>
                <label for="comment-modal">Comment</label>
            </div>
        </div>
        <div class="row">
            <div class="col s4 m6 l6 input-field">
                <!-- tab index doesn't work on select -->
                <select id="status" name="status" tabindex="8" class="validate">
                   
                        <option value="public" selected>Public</option>
                        <option value="private" >Private</option>  
  
                </select>
            </div>
            <div class="col s4 m3 l3 input-field">
                <button class="width-100 btn waves-effect waves-light modal-submit center" type="submit" name="action">Submit
                </button>
            </div>
            <div class="col s4 m3 l3 input-field">
                <button id="cancel" class="width-100 btn waves-effect waves-light black center">Cancel</button>
            </div>
        </div>
    </form>
    </div>    
</main>

<script>
    document.querySelector('#cancel').addEventListener('click',()=>{
  let x = confirm("Sure you want to cancel?")

  if(x){
    window.location.href = '/';
  }

})
</script>