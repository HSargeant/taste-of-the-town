
<main>
  <%console.log(user)%>


    <p class='center message'>Welcome to Tastes of the Town. Check out the reviews from others in your area or <a href="/signup">signup</a> up and start sharing your own great food finds!</p>

   
    <%# Each card will eventually be created to access the database and a card will be generated for every entry
    %>
<%posts.forEach(post=>{ %>

  <div class="row" data-id='<%=post._id%>'>
    <div class="col">
      <div class="card orange lighten-4">
        <div class="card-content black-text">

          <h2 class="card-title"><%=post.restaurant%></h2>
          <span><%=post.city%> , <%=post.state%> -- <%=post.country.split('-').join(' ')%></span>
          <h4 class="foodTypeSection"><%=post.foodType%></h4>
          <span class="favDishSection">Favorite dish: <%=post.favDish%>.</span>
          <p class="commentSection">"<%=post.comment%>"</p>

          <span>Reviewed by ADD USERNAME that matches the POST </span>

          <%if(user){%>
            <%if(post.userId==user._id){%>
                
              <i class="material-icons right delete">delete</i>
              <%}%>

          <%}%>
          
        </div>
      </div>
    </div>
  </div>

<%}) %>

</main>

</body>