
<main>
  <%if(user){%>
    <p class='center message'>Welcome to Taste of the Town, <%=user.userName %>!</p>
    <%}else{%>
    <p class='center message'>Welcome to Taste of the Town. Check out the reviews from others in your area or <a href="/signup">signup</a> up and start sharing your own great food finds!</p>
    <%}%>
   

   
    <%# Each card will eventually be created to access the database and a card will be generated for every entry
    %>


<%posts.forEach(post=>{ %>
  <%console.log(post.userId.userName,"=============")%>

  <div class="row-local-css" data-id='<%=post._id%>'>
    <div class="col">
      <div class="card orange lighten-4">
        <div class="card-content black-text">
          <%if(user){%>
            <%if(post.userId._id==user._id.toString()){%>
              <a href="/reviews/"><%=post.userId.userName%> </a>

              <%}else{%>
                <a href="/reviews/user/<%=post.userId._id.toString()%>"><%=post.userId.userName%></a>
                <%}%>

            <%}else{%>
          <a href="/reviews/user/<%=post.userId._id.toString()%>"><%=post.userId.userName%></a>
          <%}%>
          <h2 class="card-title"><%=post.restaurant%></h2>
          <span>Location: <%=post.city%>, <%=post.state%> -- <%=post.country.split('-').join(' ')%></span>
          <h4 class="foodTypeSection">Type: <%=post.foodType%></h4>
          <span class="favDishSection">Favorite Dish: <%=post.favDish%></span>
          <p class="commentSection">"<%=post.comment%>" 

          <%if(user){%>
            <%if(post.userId._id==user._id.toString()){%>
              <a href="/reviews/<%=post._id%>"><i class="fas fa-edit left edit"></i></a>
              <i class="fas fa-trash right delete"></i>
              <%}%>

          <%}%>
          
        </div>
      </div>
    </div>
  </div>

<%}) %>

</main>